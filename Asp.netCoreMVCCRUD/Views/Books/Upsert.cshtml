@model Asp.netCoreMVCCRUD.Models.Book
@{
    ViewData["Title"] = "Customize";
}

<br />
<h2 class="text-info">@(Model.Id!=0 ? "Edit" : "Create") Book</h2>
<br />

<div class="border container" style="padding: 30px;">
    <form asp-action="Upsert" method="post">
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" placeholder="Insert the name of the book"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Author" class="form-control" placeholder="Insert the author"/>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="ISBN" class="form-control" placeholder="Insert the ISBN"/>
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button class="form-control btn btn-success font-weight-bold" type="submit">
                    <i class="fas fa-check"></i>
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-danger form-control font-weight-bold"><i class="fa fa-remove"></i></a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

